print("\n--- SUMMARY ---")
print(f"Total States: {len(state_sales)}, Total Sales: ${df['Sales'].sum():,.2f}")
print("Top 5 States:\n", state_sales.head(5)[['State','Total_Sales']])
print("Sales by Region:\n", region_sales)

     
